generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Applicants {
  id         String     @id @default(uuid())
  full_name  String
  email      String     @unique
  phone      String?
  country    String?
  job_title  String?
  emailLogs  EmailLogs[]
}

model EmailLogs {
  id            String     @id @default(uuid())
  applicantId   String
  applicant     Applicants @relation(fields: [applicantId], references: [id], onDelete: Cascade)
  templateName  String
  sentAt        DateTime   @default(now())
  status        String     // 'success' | 'failed'
  errorMessage  String?
  emailSubject  String
  emailBody     String
  retryCount    Int        @default(0)
}
